<div class="jumbotron text-center">
  <h1>Meet new people!</h1>
  <p>Travel with locals</p>
  <!-- Button trigger modal -->
<button id="signupModal" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#triggerModal">
  Sign up
</button>
</div>

<!-- begin userModal: this is not visible until you call .modal() on it -->
    <div class="modal fade" tabindex="-1" role="dialog" id="triggerModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Sign up</h4>
          </div>
          <div class="modal-body">
          <fieldset class='form-horizontal'>
            
            {{!-- form begins --}}
            <form id="newUser" onsubmit="user.createUser(event)">

            <div class="form-group">
              <label class="col-md-4 control-label" for="email"></label>
              <div class="col-md-4">
              <a href="/auth/facebook" type="button" class="btn btn-primary">Login with Facebook</a>
              </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="firstName">First Name</label>
              <div class="col-md-4">
              <input id="firstName" name="firstName" type="text" placeholder="" class="form-control input-md" required="">
                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="lastName">Last Name</label>
                <div class="col-md-4">
                <input id="lastName" name="lastName" type="text"placeholder="" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="passwordDigest">Password</label>
                <div class="col-md-4">
                <input id="passwordDigest" name="passwordDigest" type="password" placeholder="" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="password">Confirmation password</label>
                <div class="col-md-4">
                <input id="password" name="password" type="password"placeholder="" class="form-control input-md" required="">
                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="email">Email</label>
                <div class="col-md-4">
                <input id="email" name="email" type="email" placeholder="" class="form-control input-md">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="photoUrl">Photo</label>
                <div class="col-md-4">
                <input id="photoUrl" name="photoUrl" type="file" placeholder="" class="btn btn-default btn-file" required="">
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" action="/">Close</button>
                <input type="submit" class="btn-default">
                <!-- <button type="button" class="btn btn-primary" id="saveUser">Save User</button> -->
              </div>
            </form>

            {{!-- form ends --}}

          </fieldset>

        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->